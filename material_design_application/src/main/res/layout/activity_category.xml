<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="-5dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:padding="2dp">
                <ImageView
                    android:id="@+id/category_star"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:src="@drawable/mingxing2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="明星"
                    android:textSize="18dp"
                    android:layout_marginTop="-10dp"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:padding="2dp">
                <ImageView
                    android:id="@+id/catrgory_beauty"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:src="@drawable/meinv"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="美女"
                    android:textSize="18dp"
                    android:layout_marginTop="-10dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="-5dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="2dp">
            <ImageView
                android:id="@+id/category_pet"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:src="@drawable/pet"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="宠物"
                android:textSize="18dp"
                android:layout_marginTop="-10dp"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="2dp">
            <ImageView
                android:id="@+id/catrgory_dongman"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:src="@drawable/dongman"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="动漫"
                android:textSize="18dp"
                android:layout_marginTop="-10dp"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="-5dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="2dp">

            <ImageView
                android:id="@+id/category_bizhi"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:src="@drawable/bizhi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="壁纸"
                android:textSize="18dp"
                android:layout_marginTop="-10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="2dp">

            <ImageView
                android:id="@+id/catrgory_gaoxiao"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:src="@drawable/gaoxiao2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="搞笑"
                android:textSize="18dp"
                android:layout_marginTop="-10dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="-5dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="2dp">
            <ImageView
                android:id="@+id/category_sheying"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:src="@drawable/sheying"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="摄影"
                android:textSize="18dp"
                android:layout_marginTop="-10dp"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="2dp">
            <ImageView
                android:id="@+id/category_sheji"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:src="@drawable/sheji"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设计"
                android:textSize="18dp"
                android:layout_marginTop="-10dp"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>